" Font
set guifont=DejaVu\ Sans\ Mono:h20

" Set the default size of the window
set lines=25
set columns=85

" Set highlighting theme.
colorscheme desert

" Never want a menubar and toolbar
set guioptions-=m
set guioptions-=T

" Never want a scrollbar
set guioptions-=l
set guioptions-=L
set guioptions-=r
set guioptions-=R

" Disable mouse
"set mouse-=a
